#define _CRT_SECURE_NO_DEPRECATE
#include <iostream>
#include <vector>

using namespace std;

int main() {
	ios::sync_with_stdio(false);
	cin.tie(NULL);
	cout.tie(NULL);

	freopen("input.txt", "r", stdin);

	int N;
	
	cin >> N;

	for (int i = 0; i < N; i++) {
		if ((i % 2) != 0) {
			for (int j = 0; j < N; j++) {
				cout << " *";
			}
		}
		else {
			for (int j = 0; j < N; j++) {
				cout << "* ";
			}
		}
		cout << "\n";
	}

	return 0;
}
