#define _CRT_SECURE_NO_DEPRECATE
#include <iostream>
#include <vector>

using namespace std;

int main() {
	ios::sync_with_stdio(false);
	cin.tie(NULL);
	cout.tie(NULL);

	freopen("input.txt", "r", stdin);

	int T, V, E;

	cin >> T;

	for (int test = 0; test < T; test++) {
		cin >> V >> E;
		cout << E - V + 2 << endl;
	}

	return 0;
}
