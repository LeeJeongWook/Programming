#define _CRT_SECURE_NO_DEPRECATE
#include <iostream>
#include <vector>

using namespace std;

int main() {
	ios::sync_with_stdio(false);
	cin.tie(NULL);
	cout.tie(NULL);

	freopen("input.txt", "r", stdin);

	int N, tmp = 0, ans = 0, sum = 0;

	cin >> N;

	for (int i = 0; i < N; i++) {
		sum += 3;
		tmp += sum;
		ans += tmp;
	}

	cout << ans;

	return 0;
}
